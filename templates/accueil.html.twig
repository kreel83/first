{%  extends 'base.html.twig' %}

{%  block body %}
{% for item in items %}
    <div class="card">
        <div class="card-header">
            {{ item.title }}
        </div>
        <div class="card-body">
            {{ item.description | raw }}
        </div>
        <div class="card-footer">
            <span><em>{{ item.author }}</em> <strong>{{  item.pubDate }}</strong></span>
        </div>
    </div>
    {%  endfor %}
{%  endblock %}
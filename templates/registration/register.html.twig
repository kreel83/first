{% extends 'base.html.twig' %}
{% block title %}Créer votre compte{% endblock %}

{% block body %}
<style>
  .bg-login-image {
    background: url("https://source.unsplash.com/K4mSJ7kc0As/600x800");
    background-position: center;
    background-size: cover;
  }
</style>
  <div id="register-form" class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0" style="margin-top: 0;">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  {% for flashMessage in app.session.flashbag.get('user-error') %}
                      <div class="alert alert-danger">
                        {{ flashMessage }}
                      </div>
                  {% endfor %}
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Créer vote compte </h1>
                  </div>
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.lastname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.plainPassword.second) }}
                        </div>        
                        <div class="form-group" style="text-align:center;">
                            <button class="btn btn-lg btn-primary" type="submit">Valider</button>
                        </div>
                    {{ form_end(form) }}
                    <hr>
                  <hr>
                  <div class="text-center">
                    <a id="forgot-link" href="./Login" class="small" style="cursor: pointer;" >Connexion ?</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}






